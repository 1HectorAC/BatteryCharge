@model BatteryCharge.Models.Device

@{
    ViewData["Title"] = "Details";
}

<div class="text-center whiteTextWithShadow">
    <h1>Device Details</h1>
    <p><i>Look at all the information of a device.</i></p>
    <hr />
</div>

<div class="row text-center">
    <div class="col-md-8 offset-md-2 lightBluePanel">
        <div class="col-md-8 offset-md-2">
            <h5>Device Name</h5>
            <p>@Html.DisplayFor(model => model.Name)</p>
        </div>
        <hr class="dGreenColor" />
        <h4><u>Device Info</u></h4>
        <div class="row">
            <div class="col-md-3">
                <h5>Battery Replace Count</h5>
                <p>@Html.DisplayFor(model => model.BatteryReplacmentCount)</p>
            </div>
            <div class="col-md-3">
                <h5>Date Bought</h5>
                <p>@Html.DisplayFor(model => model.DateBought)</p>
            </div>
            <div class="col-md-3">
                <h5>Battery Capacity</h5>
                <p>@Html.DisplayFor(model => model.BatteryCapacity)</p>
            </div>
            <div class="col-md-3">
                <h5>Battery Voltage</h5>
                <p>@Html.DisplayFor(model => model.BatteryVoltage)</p>
            </div>
        </div>
        <hr class="dGreenColor" />
        <h4><u>Recharge Info</u></h4>
        <div class="row">
            <div class="col-md-6">
                <h5>Last Recharge Date</h5>
                <p>@Html.DisplayFor(model => model.LastRechargeDate)</p>
            </div>
            <div class="col-md-6">
                <h5>Recharge Cycle</h5>
                <p>@Html.DisplayFor(model => model.RechargeCycle)</p>
            </div>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-primary">Go To Devices</a>
        </div>
    </div>
</div>
