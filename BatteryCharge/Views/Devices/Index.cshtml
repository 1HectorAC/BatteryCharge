@model IEnumerable<BatteryCharge.Models.Device>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center" style="color:white; text-shadow: 1px 1px 2px #002133;">
    <h1>Devices</h1>
    <p><i>Here are details about each device and options to edit.</i></p>
    <hr style="color:white" />
</div>
<div class="float-end" style="padding-bottom:10px">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>



<table class="table table-light table-striped text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Date Bought
            </th>
            <th>
                Battery Capacity
            </th>
            <th>
                Battery Voltage
            </th>
            <th>
                Total Replacements
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td><b>
                        @Html.DisplayFor(modelItem => item.Name)
            </b>
                
            </td>
            <td>
                @item.DateBought.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatteryCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatteryVoltage)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatteryReplacmentCount)
                </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
