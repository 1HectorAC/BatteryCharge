@model BatteryCharge.Models.Device

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center whiteTextWithShadow">
    <h1>Delete Device</h1>
    <p><i>Delete a device from your list.</i></p>
    <h2>Are you sure you want to delete this?</h2>
    <hr />
</div>

<div class="row text-center">
    <div class="col-md-8 offset-md-2 lightBluePanel">
        <div class="col-md-8 offset-md-2">
            <h5>Device Name</h5>
            <p>@Html.DisplayFor(model => model.Name)</p>
        </div>
        <hr class="dGreenColor" />
        <h4><u>Device Info</u></h4>
        <div class="row">
            <div class="col-md-3">
                <h5>Battery Replace Count</h5>
                <p>@Html.DisplayFor(model => model.BatteryReplacmentCount)</p>
            </div>
            <div class="col-md-3">
                <h5>Date Bought</h5>
                <p>@Model.DateBought.ToShortDateString()</p>
            </div>
            <div class="col-md-3">
                <h5>Battery Capacity</h5>
                <p>@Html.DisplayFor(model => model.BatteryCapacity)</p>
            </div>
            <div class="col-md-3">
                <h5>Battery Voltage</h5>
                <p>@Html.DisplayFor(model => model.BatteryVoltage)</p>
            </div>
        </div>
        <hr class="dGreenColor" />
        <h4><u>Recharge Info</u></h4>
        <div class="row">
            <div class="col-md-6">
                <h5>Last Recharge Date</h5>
                <p>@Model.LastRechargeDate.ToShortDateString()</p>
            </div>
            <div class="col-md-6">
                <h5>Recharge Cycle</h5>
                <p>@Html.DisplayFor(model => model.RechargeCycle)</p>
            </div>
        </div>
        <hr class="dGreenColor" />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
